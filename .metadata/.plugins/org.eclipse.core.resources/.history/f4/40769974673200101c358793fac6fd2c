package controller;


import java.io.IOException;
import java.util.ArrayList;

import engine.Game;
import engine.board.Cell;
import javafx.fxml.FXML;
import javafx.scene.control.Label;
import javafx.scene.layout.AnchorPane;
import view.CellView;

public class MainGameController {

	@FXML
	private Label nameLabel1;
	@FXML
	private Label nameLabel2;
	@FXML
	private Label nameLabel3;
	@FXML
	private Label nameLabel4;
	Game game;
	
	// In your controller class:
	@FXML
	private AnchorPane boardPane;  // This is defined in your FXML as the container for the board

	private ArrayList<Cell> trackCells; // Your model holding the cell objects

	

	
	public void startGame(String username) throws IOException{
		game = new Game(username);
		
		displayName(nameLabel1, username);
		displayName(nameLabel2, "CPU1");
		displayName(nameLabel3, "CPU2");
		displayName(nameLabel4, "CPU3");
	}
	
	public void displayName(Label label, String username){
		label.setText(username);
	}
	
	
	public void initializeBoard() {

	    trackCells = game.getBoard().getTrack();
	    

	    for (Cell cell : trackCells) {
	        // Create the view for the cell.
	        CellView cellView = new CellView(cell);
	        	        
	        // Add this cell view to the board container.
	        boardPane.getChildren().add(cellView);
	    }
	}
}
